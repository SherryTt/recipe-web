<!doctype html>
<html lang="en">
  {% include "partials/header.twig" %}

<body>
  {% include "partials/navigation2.twig" %}
  <div class="main-container row  h-100 justify-content-around">

  <!--Top section/img/welcomeMSG?follower/description-->
    <div class="wrapTop">
      <div class="topSec d-flex align-items-center m-4 px-5 pt-5">
        <div class="userDetail">
          <img class="user-img" src="uerImage/{{user_image}}" style="width:200px;height:200px;border-radius: 50%;">
            <div class="followerInfo d-flex justify-content-center">
              <img class="user_follower" src="/templates/images/people.svg" style="width:25px;height:25px;">
              <p style="font-size: 25px;">{{user_follower}}</p>
            </div>
        </div>
          
        <div class="msg justify-content-center p-5" style="width: 300px;">
          <h1>Welcomback,{{name}}</h1>
        </div>
      </div>
        <div class="mb-4"style="max-width:80%; padding-left:8em;" >
          <h2 style="text-decoration:underline">Description</h2>
          <p>{{user_detail}}</p>
        </div>
    </div>


    <!-- Profile info -->
      <div class="profile mb-4 mt-5 justify-content-center mb-5" style="max-width: fit-content;">

        <div class="profile_title mb-5" style="border: #5C4033;">
          <div class="titlePro" style="text-align: center;border-style:outset;"><h2>Profile</h2></div>
        </div>

          <div class="name  d-flex align-items-center justify-content-center mb-5">
            <div style="width: 150px; text-align:center;">NAME</div>
            <div style="width: 115px;"><h3>{{name}}</h3></div>
            <h3></h3>
          </div>
    
          <div class="mb-4  d-flex align-items-center justify-content-center mb-5">
            <div style="width: 150px;">EMAIL ADDRESS</div>
            <div style="width: 150px;"><h3>{{email}}</h3></div>
          </div>

      </div>
  </div>
  {% include "partials/footer.twig" %}
  {% include "partials/script.twig" %}
</body>

</html>
