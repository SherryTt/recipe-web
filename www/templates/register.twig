<!doctype html>
<html lang="en">
  {% include "partials/header.twig" %}

<body>
  <div class="main-container">
    <section class="vh-100" style="background-color: white">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong">
              <div class="close">
              <a href="home.html.twig">
              <image class="item-close" src="images/close.svg"></a>
              </div>
              <div class="card-body p-5 text-center">
                <form id="register-form" method="post" action="register.php" autocomplete="off"></form>
                <h1 class="mb-5">SIGN UP</h1>

                {% if register.errors.name %}
                {% set nameErrorMessage = register.errors.name %}
                {% set namelInvalid = 'is-invalid' %}
                {% endif %}
                <div class="form-outline mb-4">
                  <label class="form-label" for="typeEmailX-2">User name</label>
                  <input type="text" value="{{name}}" id="name" class="form-control form-control-lg {{nameInvalid}}" name="name" placeholder="Lora" autocomplete="new-password">
                  <div class="invalid-feedback">{{nameErrorMessage}}</div>
                </div>

                {% if register.errors.email %}
                {% set emailErrorMessage = register.errors.email %}
                {% set emailInvalid = 'is-invalid' %}
                {% endif %}
                <div class="form-outline mb-4">
                  <label class="form-label" for="typeEmailX-2">Email</label>
                  <input type="email" value="{{email}}" id="email" class="form-control form-control-lg {{emailInvalid}}" name="email" placeholder="sample@email.com" autocomplete="new-password">
                  <div class="invalid-feedback">{{emailErrorMessage}}</div>
                </div>
                {% if register.errors.password %}
                {% set passwordErrorMessage = register.errors.password %}
                {% set passwordInvalid = 'is-invalid' %}
                {% endif %}
    
                <div class="form-outline mb-4" id="bottom-checkbox">
                  <label class="form-label" for="typePasswordX-2">Password</label>
                  <input type="password" id="password" class="form-control form-control-lg {{passwordInvalid}}" name="password" placeholder="minimum 8 characters" autocomplete="new-password">
                  <div class="invalid-feedback">{{passwordErrorMessage}}</div>
                </div>
                {% if register.errors.confirm_pass %}
                {% set passwordErrorMessage = register.errors.confirm_pass %}
                {% set passwordInvalid = 'is-invalid' %}
                {% endif %}

                <div class="form-outline mb-4" id="bottom-checkbox">
                  <label class="form-label" for="typePasswordX-2">Confirm Password</label>
                  <input type="password" id="confirm_pass" class="form-control form-control-lg" name="confirm_pass"  placeholder="minimum 8 characters" autocomplete="new-password>
                </div>
    
    
                <!-- login button -->
                <button class="btn btn-dark btn-lg btn-block signup_btn" type="submit" style="border-radius:30px;  width: -webkit-fill-available;">SUBMIT</button>
    
    
                <!-- if login as social media account -->
                <!--<button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;" type="submit"><i class="fab fa-google me-2"></i> Sign in with google</button>
                <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;" type="submit"><i class="fab fa-facebook-f me-2"></i>Sign in with facebook</button> -->
    
              </div>
            </div>
          </div>
        </div>
      </div>
