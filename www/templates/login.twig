<!doctype html>
<html lang="en">
  {% include "partials/header.twig" %}

<body>
  <div class="main-container">
    <section class="vh-100" style="background-color: white">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong">
              <div class="close">
              <a href="home.twig">
              <image class="item-close" src="images/close.svg"></a>
              </div>
              <div class="card-body p-5 text-center">
                <form id="register-form" method="post" action="login.php" autocomplete="off"></form>
                <h1 class="mb-5">LOG IN</h1>
                {% if login.errors.email %}
                {% set emailErrorMessage = login.errors.email %}
                {% set emailInvalid = 'is-invalid' %}
                {% endif %}
    
                <div class="form-outline mb-4">
                  <label class="form-label" for="typeEmailX-2">Email</label>
                  <input value="{{email}}" type="email" id="typeEmailX-2" class="form-control form-control-lg {{emailInvalid}}" name="email" placeholder="sample@email.com" autocomplete="new-password">
                  <div class="invalid-feedback">{{emailErrorMessage}}</div>
                </div>
                {% if login.errors.password %}
                {% set passwordErrorMessage = login.errors.password %}
                {% set passwordInvalid = 'is-invalid' %}
                {% endif %}
    
                <div class="form-outline" id="bottom-checkbox">
                  <label class="form-label" for="typePasswordX-2">Password</label>
                  <input type="password" id="typePasswordX-2" class="form-control form-control-lg {{passwordInvalid}}" name="password" placeholder="minimum 8 characters" autocomplete="new-password">
                  <div class="invalid-feedback">{{passwordErrorMessage}}</div>
                </div>
    
                 <!-- remember me and reset pass-->
                <!-- Checkbox -->
                <div class="form-check justify-content-start d-flex mb-4 pass">
                <div class="form-check justify-content-start d-flex mb-4 ">
                  <input class="form-check-input" type="checkbox" value="" id="form1Example3" >
                  <label class="form-check-label" for="form1Example3"> Remember me? </label>
                </div>
                <div class="form-check d-flex mb-4 ">
                  <a class="forgetpass form-check-label" href="resetpass.html">Forget password</a>  
                </div>
                </div>
    
                <!-- login button -->
                <button class="btn btn-dark btn-lg btn-block" type="submit" style="border-radius:30px;  width: -webkit-fill-available;">LOGIN</button>
    
                <hr class="my-4">

                <div class="createacc">
                  <p>DON'T HAVE AN ACCOUNT? <a href="register.twig">SIGN UP</a></p>

                </div>
    
                <!-- if login as social media account -->
                <!--<button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;" type="submit"><i class="fab fa-google me-2"></i> Sign in with google</button>
                <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;" type="submit"><i class="fab fa-facebook-f me-2"></i>Sign in with facebook</button> -->
    
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>



  </div>
  {% include "partials/footer.twig" %}
</body>

</html>
